<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollViewHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nz.co.hawkefilms.womenofinfluence.Home"
    tools:showIn="@layout/activity_home"
    android:background="@color/colorBody">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/textSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sub_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_top_sub_titles"
            android:layout_marginBottom="@dimen/activity_titles_marginBottom" />

        <TextView
            android:id="@+id/textBlurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blurb"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/description_text_size"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnFeatureVideo"
            android:contentDescription="@string/desc_btn_feature_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hm_feature_video_aut_text"
            android:onClick="viewVideoFeaturedLink"
            android:scaleType="fitXY"
            android:textSize="@dimen/feature_vid_text_size"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/background_for_buttons" />

        <TextView
            android:id="@+id/txtFeatureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/btn_feature_vid_text_size"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/homeScreenBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/layout_padding_top"
            android:paddingBottom="@dimen/layout_padding_bottom"
            android:layout_marginLeft="@dimen/layout_margin_left"
            android:layout_marginStart="@dimen/layout_margin_left"
            android:layout_marginRight="@dimen/layout_margin_right"
            android:layout_marginEnd="@dimen/layout_margin_right"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:background="@drawable/background_border">

            <Button
                android:id="@+id/btnVideoGallery"
                android:contentDescription="@string/desc_btn_video_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_video_gallery"
                android:onClick="videoGalleryButtonOnClick"
                android:textSize="@dimen/btn_text_size"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:typeface="normal"
                android:layout_marginLeft="@dimen/btn_layout_margin_left"
                android:layout_marginStart="@dimen/btn_layout_margin_left"
                android:layout_marginRight="@dimen/btn_layout_margin_right"
                android:layout_marginEnd="@dimen/btn_layout_margin_right"
                android:layout_marginTop="@dimen/btn_layout_margin_top"
                android:background="@drawable/background_for_buttons"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtContactText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/hm_feedback_text"
                android:textStyle="italic"
                android:textSize="@dimen/description_text_size"
                android:layout_marginTop="@dimen/tv_layout_margin_top"
                android:layout_marginBottom="@dimen/tv_layout_margin_bottom"
                android:layout_marginLeft="@dimen/tv_layout_margin_left"
                android:layout_marginStart="@dimen/tv_layout_margin_left"
                android:layout_marginRight="@dimen/tv_layout_margin_right"
                android:layout_marginEnd="@dimen/tv_layout_margin_right"
                android:gravity="center" />

            <Button
                android:id="@+id/btnContactUs"
                android:contentDescription="@string/desc_btn_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "@string/hm_btn_contact_us"
                android:onClick="feedbackButtonOnClick"
                android:textSize="@dimen/btn_text_size"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:typeface="normal"
                android:layout_marginLeft="@dimen/btn_layout_margin_left"
                android:layout_marginStart="@dimen/btn_layout_margin_left"
                android:layout_marginRight="@dimen/btn_layout_margin_right"
                android:layout_marginEnd="@dimen/btn_layout_margin_right"
                android:layout_marginTop="@dimen/btn_layout_margin_top"
                android:layout_marginBottom="@dimen/btn_layout_margin_bottom"
                android:background="@drawable/background_for_buttons"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
